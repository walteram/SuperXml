<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <TargetFrameworks>net7.0;net5.0;net6.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>SuperXml.NetCore</PackageId>
    <Version>6.0.0</Version>
    <Authors>walteram</Authors>
    <Description>SuperXml is just a light weight and easy to use templating engine library, useful to create string and xml templates. This is a fork from the original lib from beto-rodrigues to support .net core.</Description>
    <PackageProjectUrl>https://github.com/walteram/SuperXml</PackageProjectUrl>
    <RepositoryUrl>https://github.com/walteram/SuperXml</RepositoryUrl>
    <AssemblyVersion>6.0.0</AssemblyVersion>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NCalc.NetCore" Version="1.0.1" />
    <None Include="..\README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

</Project>
